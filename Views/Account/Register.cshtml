@model ServiceMarketplace.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Kayıt Ol";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white text-center">
                    <h4><i class="bi bi-person-plus"></i> Hesap Oluştur</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Register" method="post">
                        @Html.AntiForgeryToken()

                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="FullName" class="form-label"></label>
                            <input asp-for="FullName" class="form-control" placeholder="Adınızı ve soyadınızı girin">
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label"></label>
                            <input asp-for="Email" class="form-control" placeholder="eposta@ornek.com">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="Password" class="form-label"></label>
                                <input asp-for="Password" class="form-control" placeholder="En az 6 karakter">
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="ConfirmPassword" class="form-label"></label>
                                <input asp-for="ConfirmPassword" class="form-control" placeholder="Şifre tekrar">
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Role" class="form-label"></label>
                            <select asp-for="Role" class="form-select" id="roleSelect">
                                <option value="Customer">Müşteri - Hizmet almak istiyorum</option>
                                <option value="MaterialSupplier">Malzeme Satıcısı - Malzeme tedarik ediyorum</option>
                                <option value="LaborProvider">Usta - İşçilik hizmeti veriyorum</option>
                            </select>
                            <span asp-validation-for="Role" class="text-danger"></span>
                        </div>

                        <div class="mb-3" id="companySection" style="display: none;">
                            <label asp-for="CompanyName" class="form-label"></label>
                            <input asp-for="CompanyName" class="form-control" placeholder="Şirket/işletme adınız">
                            <span asp-validation-for="CompanyName" class="text-danger"></span>
                        </div>

                        <div class="mb-3" id="taxSection" style="display: none;">
                            <label asp-for="TaxNumber" class="form-label"></label>
                            <input asp-for="TaxNumber" class="form-control" placeholder="Vergi numaranız">
                            <span asp-validation-for="TaxNumber" class="text-danger"></span>
                        </div>

                        <div class="mb-3" id="licenseSection" style="display: none;">
                            <label asp-for="LicenseNumber" class="form-label"></label>
                            <input asp-for="LicenseNumber" class="form-control" placeholder="İş belgesi numaranız">
                            <span asp-validation-for="LicenseNumber" class="text-danger"></span>
                        </div>

                        <div class="mb-3" id="specialtiesSection" style="display: none;">
                            <label asp-for="Specialties" class="form-label"></label>
                            <input asp-for="Specialties" class="form-control" placeholder="Örn: Alçıpan, Elektrik, Boya">
                            <small class="form-text text-muted">Uzmanlık alanlarınızı virgülle ayırarak yazın</small>
                            <span asp-validation-for="Specialties" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="PhoneNumber" class="form-label"></label>
                            <input asp-for="PhoneNumber" class="form-control" placeholder="İsteğe bağlı">
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-person-check"></i> Kayıt Ol
                            </button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center">
                    Zaten hesabınız var mı? <a asp-action="Login">Buradan giriş yapın</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function updateFieldsBasedOnRole() {
            var role = document.getElementById('roleSelect').value;
            var companySection = document.getElementById('companySection');
            var taxSection = document.getElementById('taxSection');
            var licenseSection = document.getElementById('licenseSection');
            var specialtiesSection = document.getElementById('specialtiesSection');
            
            // Hide all conditional sections first
            companySection.style.display = 'none';
            taxSection.style.display = 'none';
            licenseSection.style.display = 'none';
            specialtiesSection.style.display = 'none';
            
            if (role === 'MaterialSupplier') {
                companySection.style.display = 'block';
                taxSection.style.display = 'block';
            } else if (role === 'LaborProvider') {
                companySection.style.display = 'block';
                licenseSection.style.display = 'block';
                specialtiesSection.style.display = 'block';
            }
        }
        
        document.getElementById('roleSelect').addEventListener('change', updateFieldsBasedOnRole);
        
        // Initial check on page load
        updateFieldsBasedOnRole();
    </script>
}
