@model ServiceMarketplace.ViewModels.BulkUpdateViewModel

@{
    ViewData["Title"] = "Toplu Fiyat Güncelleme";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-warning text-dark">
                    <h4><i class="bi bi-percent"></i> Toplu Fiyat Güncelleme</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle"></i> 
                        Bu işlem seçilen kategorideki tüm fiyatları belirtilen yüzdeyle değiştirecektir.
                    </div>

                    <form asp-action="BulkUpdate" method="post">
                        @Html.AntiForgeryToken()
                        
                        <div class="mb-3">
                            <label asp-for="SelectedCategory" class="form-label">Kategori</label>
                            <select asp-for="SelectedCategory" class="form-select">
                                <option value="">-- Tüm Kategoriler --</option>
                                @foreach (var cat in Model.Categories)
                                {
                                    <option value="@cat">@cat</option>
                                }
                            </select>
                            <small class="text-muted">Tüm aktif fiyatları güncellemek için boş bırakın</small>
                        </div>

                        <div class="mb-4">
                            <label asp-for="PercentageChange" class="form-label">Yüzde Değişikliği (%)</label>
                            <div class="input-group">
                                <input asp-for="PercentageChange" class="form-control form-control-lg" 
                                       type="number" step="0.1" placeholder="Örnek: 10 veya -5">
                                <span class="input-group-text">%</span>
                            </div>
                            <span asp-validation-for="PercentageChange" class="text-danger"></span>
                            <div class="mt-2">
                                <small class="text-muted">
                                    Örnekler: <code>10</code> = %10 artış, <code>-5</code> = %5 azalma
                                </small>
                            </div>
                        </div>

                        <hr>
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">İptal</a>
                            <button type="submit" class="btn btn-warning" 
                                    onclick="return confirm('Emin misiniz? Bu işlem eşleşen tüm fiyatları güncelleyecektir.');">
                                <i class="bi bi-check-lg"></i> Güncellemeyi Uygula
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
