@model ServiceMarketplace.Models.AdminPriceReference

@{
    ViewData["Title"] = "Excel'den Ürün Yükle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-white py-3">
                    <h4 class="mb-0"><i class="bi bi-file-earmark-spreadsheet"></i> Excel ile Ürün/Hizmet Yükle</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle"></i> <strong>Bilgi:</strong>
                        <p class="mb-0">Yükleyeceğiniz Excel dosyasının (.xlsx) ilk satırı başlık olmalı ve sırasıyla şu sütunları içermelidir:</p>
                        <ol class="mt-2 mb-0">
                            <li>Kategori Adı</li>
                            <li>Malzeme/Hizmet Adı (Zorunlu)</li>
                            <li>Açıklama</li>
                            <li>Marka</li>
                            <li>Kalite (Standart, Premium vb.)</li>
                            <li>Miktar (Sayısal)</li>
                            <li>Birim (Adet, m², Litre vb.)</li>
                            <li>Birim Fiyat (TL, Sayısal)</li>
                            <li>İşçilik mi? (TRUE/FALSE veya Evet/Hayır)</li>
                        </ol>
                    </div>

                    <form asp-action="Import" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        
                        <div class="mb-4">
                            <label for="file" class="form-label">Excel Dosyası Seçin</label>
                            <input type="file" name="file" id="file" class="form-control" accept=".xlsx" required />
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary">Geri Dön</a>
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-upload"></i> Yükle ve İşle
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
