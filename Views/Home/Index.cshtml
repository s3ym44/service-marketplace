        <!-- Search -->
        <form asp-action="Index" method="get" style="max-width: 620px;">
            <div class="sh-search-box">
                <div style="flex: 1; position: relative;">
                    <span class="sh-search-icon">üîç</span>
                    <input type="text" name="search" value="@searchQuery"
                           placeholder="Ne yaptƒ±rmak istiyorsunuz? (√∂r: mutfak, banyo, √ßatƒ±...)"
                           class="sh-search-input" />
                </div>
                <button type="submit" class="sh-search-btn">Ara</button>
            </div>
        </form>

        <!-- Stats -->
        <div class="row mt-5">
            @{
                var statsData = new[] {
                    new { Icon = "‚úÖ", Value = Model.TotalListings + "+", Label = "Olu≈üturulan ƒ∞lan" },
                    new { Icon = "üë∑", Value = Model.TotalSuppliers + "+", Label = "Kayƒ±tlƒ± Usta & Firma" },
                    new { Icon = "üì¶", Value = Model.TotalPackages.ToString(), Label = "Hazƒ±r Tadilat Paketi" },
                    new { Icon = "‚≠ê", Value = "%95", Label = "M√º≈üteri Memnuniyeti" }
                };
            }
            @foreach (var stat in statsData)
            {
                <div class="col-6 col-md-3 mb-3">
                    <div class="sh-stat-item">
                        <div class="sh-stat-icon">@stat.Icon</div>
                        <div>
                            <div class="sh-stat-value">@stat.Value</div>
                            <div class="sh-stat-label">@stat.Label</div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<!-- ========== FILTER TABS ========== -->
<section class="sh-filter-bar">
    <div class="container" style="display: flex; gap: 4px; overflow-x: auto;">
        @{
            var filters = new[] {
                new { Id = "all", Label = "T√ºm√º", IconStr = "üìã" },
                new { Id = "IcMekan", Label = "ƒ∞√ß Mekan", IconStr = "üè†" },
                new { Id = "DisMekan", Label = "Dƒ±≈ü Mekan", IconStr = "üèóÔ∏è" },
                new { Id = "Ticari", Label = "Ticari", IconStr = "üè¢" }
            };
        }
        @foreach (var tab in filters)
        {
            var isActive = activeFilter == tab.Id;
            <a asp-action="Index" asp-route-filter="@tab.Id" asp-route-search="@searchQuery"
               class="sh-filter-tab @(isActive ? "sh-filter-active" : "")">
                <span>@tab.IconStr</span> @tab.Label
            </a>
        }
    </div>
</section>

<!-- ========== CATEGORY GROUPS ========== -->
<section class="container" style="padding: 40px 15px 80px;">
    @if (!Model.Groups.Any())
    {
        <div style="text-align: center; padding: 80px 0; color: #94a3b8;">
            <div style="font-size: 48px; margin-bottom: 16px;">üîç</div>
            <h3 style="font-size: 20px; font-weight: 600; color: #475569;">Sonu√ß bulunamadƒ±</h3>
            <p>Farklƒ± bir arama terimi deneyin</p>
        </div>
    }
    else
    {
        @foreach (var group in Model.Groups)
        {
            <div style="margin-bottom: 48px;">
                <!-- Group Header -->
                <div class="sh-group-header">
                    <span style="font-size: 24px;">
                        @(group.GroupType == "IcMekan" ? "üè†" : group.GroupType == "DisMekan" ? "üèóÔ∏è" : "üè¢")
                    </span>
                    <h2 class="sh-group-title">
                        @group.GroupTitle
                    </h2>
                    <span class="sh-group-count">
                        @group.Categories.Count
                    </span>
                </div>

                <!-- Category Cards Grid -->
                <div class="row g-4">
                    @foreach (var cat in group.Categories)
                    {
                        var pCount = packageCounts.ContainsKey(cat.Id) ? packageCounts[cat.Id] : 0;
                        <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                            <a asp-controller="ServicePackages" asp-action="Index" asp-route-categoryId="@cat.Id"
                               style="text-decoration: none; display: block; height: 100%;">
                                <div class="sh-category-card">
                                    <!-- Image -->
                                    <div class="sh-card-image">
                                        @if (!string.IsNullOrEmpty(cat.ImageUrl))
                                        {
                                            <img src="@cat.ImageUrl" alt="@cat.Name" />
                                        }
                                        else
                                        {
                                            <div class="sh-card-placeholder">
                                                @cat.Icon
                                            </div>
                                        }
                                        <div class="sh-card-overlay"></div>
                                        <div class="sh-card-badge">@pCount Paket</div>
                                        <div class="sh-card-emoji">@cat.Icon</div>
                                    </div>
                                    <!-- Content -->
                                    <div class="sh-card-content">
                                        <h3 class="sh-card-title">@cat.Name</h3>
                                        <p class="sh-card-desc">@cat.Description</p>
                                        <div class="sh-card-footer">
                                            <span class="sh-card-link">Paketleri G√∂r ‚Üí</span>
                                            <div style="display: flex; gap: 4px;">
                                                <span class="sh-tag-material">Malzeme</span>
                                                <span class="sh-tag-labor">ƒ∞≈ü√ßilik</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </a>
                        </div>
                    }
                </div>
            </div>
        }
    }
</section>

<!-- ========== NASIL √áALI≈ûIR ========== -->
<section class="sh-how-section">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="sh-section-title">Nasƒ±l √áalƒ±≈üƒ±r?</h2>
            <p style="font-size: 16px; color: #64748b; margin-top: 8px;">4 basit adƒ±mda evinizi yenileyin</p>
        </div>
        <div class="row">
            @{
                var steps = new[] {
                    new { Step = "1", Title = "Paket Se√ßin", Desc = "Mutfak, banyo, salon... ƒ∞stediƒüiniz tadilat paketini se√ßin", Color = "#3b82f6" },
                    new { Step = "2", Title = "√ñl√ß√ºleri Girin", Desc = "Odanƒ±zƒ±n √∂l√ß√ºlerini cm olarak girin, sistem metrajƒ± hesaplasƒ±n", Color = "#8b5cf6" },
                    new { Step = "3", Title = "Teklifleri Alƒ±n", Desc = "Onlarca firma ve ustadan detaylƒ± fiyat teklifi alƒ±n", Color = "#F97316" },
                    new { Step = "4", Title = "Kar≈üƒ±la≈ütƒ±rƒ±n", Desc = "Marka, fiyat ve s√ºreyi kar≈üƒ±la≈ütƒ±rƒ±p en uygununu se√ßin", Color = "#10b981" }
                };
            }
            @foreach (var step in steps)
            {
                <div class="col-6 col-md-3 text-center mb-4">
                    <div class="sh-step-circle" style="background: @(step.Color)15; color: @step.Color;">@step.Step</div>
                    <h3 style="font-size: 18px; font-weight: 700; color: #1a2332; margin-bottom: 8px;">@step.Title</h3>
                    <p style="font-size: 14px; color: #64748b; line-height: 1.6;">@step.Desc</p>
                </div>
            }
        </div>
    </div>
</section>

<!-- ========== CTA ========== -->
<section class="sh-cta-section">
    <div class="container text-center" style="max-width: 700px;">
        <h2 style="font-size: 28px; font-weight: 800; color: #fff; margin-bottom: 12px;">Hemen Ba≈ülayƒ±n</h2>
        <p style="font-size: 16px; color: #94a3b8; margin-bottom: 28px;">√úcretsiz kayƒ±t olun, tadilat paketinizi se√ßin ve dakikalar i√ßinde teklif almaya ba≈ülayƒ±n.</p>
        <div style="display: flex; gap: 12px; justify-content: center; flex-wrap: wrap;">
            <a asp-controller="Account" asp-action="Register"
               class="sh-cta-primary">
                M√º≈üteri Olarak Kayƒ±t Ol
            </a>
            <a asp-controller="Account" asp-action="Register"
               class="sh-cta-secondary">
                Usta / Firma Kaydƒ±
            </a>
        </div>
    </div>
</section>

@section Styles {
<style>
    /* ===== HERO ===== */
    .sh-hero {
        background: linear-gradient(135deg, #1a2332 0%, #0f1923 60%, #1a2332 100%);
        padding: 80px 0 60px;
        position: relative;
        overflow: hidden;
    }
    .sh-hero-glow {
        position: absolute;
        top: 0; right: 0;
        width: 50%; height: 100%;
        background: radial-gradient(circle at 70% 50%, rgba(249,115,22,0.08) 0%, transparent 60%);
    }
    .sh-hero-badge {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        background: rgba(249,115,22,0.12);
        border: 1px solid rgba(249,115,22,0.25);
        border-radius: 20px;
        padding: 6px 16px;
        margin-bottom: 20px;
        font-size: 13px;
        color: #FB923C;
        font-weight: 600;
    }
    .sh-hero-title {
        font-size: 48px;
        font-weight: 800;
        color: #fff;
        line-height: 1.15;
        letter-spacing: -0.03em;
        margin-bottom: 16px;
    }
    .sh-hero-highlight {
        background: linear-gradient(135deg, #F97316, #FBBF24);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }
    .sh-hero-desc {
        font-size: 18px;
        color: #94a3b8;
        line-height: 1.6;
        margin-bottom: 36px;
    }

    /* ===== SEARCH ===== */
    .sh-search-box {
        display: flex;
        background: #fff;
        border-radius: 16px;
        overflow: hidden;
        box-shadow: 0 8px 40px rgba(0,0,0,0.2);
    }
    .sh-search-icon {
        position: absolute;
        left: 20px;
        top: 50%;
        transform: translateY(-50%);
        font-size: 18px;
        opacity: 0.4;
    }
    .sh-search-input {
        width: 100%;
        padding: 18px 20px 18px 52px;
        border: none;
        font-size: 15px;
        outline: none;
        box-sizing: border-box;
        color: #1a2332;
    }
    .sh-search-btn {
        padding: 0 32px;
        background: linear-gradient(135deg, #F97316, #FB923C);
        border: none;
        color: #fff;
        font-size: 15px;
        font-weight: 700;
        cursor: pointer;
        white-space: nowrap;
    }
    .sh-search-btn:hover {
        background: linear-gradient(135deg, #ea6c0e, #f08a2e);
    }

    /* ===== STATS ===== */
    .sh-stat-item {
        display: flex;
        align-items: center;
        gap: 14px;
    }
    .sh-stat-icon {
        width: 44px; height: 44px;
        border-radius: 12px;
        background: rgba(255,255,255,0.06);
        border: 1px solid rgba(255,255,255,0.08);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 20px;
    }
    .sh-stat-value {
        font-size: 22px;
        font-weight: 800;
        color: #fff;
    }
    .sh-stat-label {
        font-size: 12px;
        color: #64748b;
    }

    /* ===== FILTER TABS ===== */
    .sh-filter-bar {
        background: #fff;
        border-bottom: 1px solid #e8ecf1;
        position: sticky;
        top: 0;
        z-index: 90;
    }
    .sh-filter-tab {
        padding: 16px 24px;
        text-decoration: none;
        border-bottom: 3px solid transparent;
        color: #64748b;
        font-size: 14px;
        font-weight: 500;
        display: flex;
        align-items: center;
        gap: 8px;
        white-space: nowrap;
        transition: all 0.2s;
    }
    .sh-filter-tab:hover {
        color: #F97316;
    }
    .sh-filter-active {
        border-bottom-color: #F97316 !important;
        color: #F97316 !important;
        font-weight: 700 !important;
    }

    /* ===== GROUP HEADER ===== */
    .sh-group-header {
        display: flex;
        align-items: center;
        gap: 12px;
        margin-bottom: 24px;
    }
    .sh-group-title {
        font-size: 24px;
        font-weight: 800;
        color: #1a2332;
        letter-spacing: -0.02em;
        margin: 0;
    }
    .sh-group-count {
        background: #f1f5f9;
        color: #64748b;
        padding: 4px 12px;
        border-radius: 20px;
        font-size: 13px;
        font-weight: 600;
    }

    /* ===== CATEGORY CARDS ===== */
    .sh-category-card {
        background: #fff;
        border-radius: 16px;
        overflow: hidden;
        box-shadow: 0 1px 8px rgba(0,0,0,0.04);
        border: 1px solid #e8ecf1;
        cursor: pointer;
        transition: all 0.3s ease;
        height: 100%;
        display: flex;
        flex-direction: column;
    }
    .sh-category-card:hover {
        transform: translateY(-6px);
        box-shadow: 0 12px 40px rgba(0,0,0,0.1);
    }
    .sh-category-card:hover img {
        transform: scale(1.05);
    }
    .sh-card-image {
        position: relative;
        height: 180px;
        overflow: hidden;
    }
    .sh-card-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.4s;
    }
    .sh-card-placeholder {
        width: 100%;
        height: 100%;
        background: linear-gradient(135deg, #1a2332, #2d3a4a);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 48px;
    }
    .sh-card-overlay {
        position: absolute;
        inset: 0;
        background: linear-gradient(to top, rgba(0,0,0,0.5) 0%, transparent 50%);
    }
    .sh-card-badge {
        position: absolute;
        top: 12px;
        right: 12px;
        background: rgba(255,255,255,0.95);
        border-radius: 8px;
        padding: 4px 10px;
        font-size: 11px;
        font-weight: 700;
        color: #F97316;
    }
    .sh-card-emoji {
        position: absolute;
        bottom: 12px;
        left: 12px;
        font-size: 32px;
    }
    .sh-card-content {
        padding: 16px 20px 20px;
        flex: 1;
        display: flex;
        flex-direction: column;
    }
    .sh-card-title {
        font-size: 17px;
        font-weight: 700;
        color: #1a2332;
        margin-bottom: 6px;
    }
    .sh-card-desc {
        font-size: 13px;
        color: #64748b;
        line-height: 1.5;
        margin-bottom: 16px;
        flex: 1;
    }
    .sh-card-footer {
        display: flex;
        align-items: center;
        justify-content: space-between;
    }
    .sh-card-link {
        font-size: 13px;
        color: #F97316;
        font-weight: 600;
    }
    .sh-tag-material {
        background: #eff6ff;
        color: #3b82f6;
        padding: 3px 8px;
        border-radius: 6px;
        font-size: 10px;
        font-weight: 600;
    }
    .sh-tag-labor {
        background: #f0fdf4;
        color: #10b981;
        padding: 3px 8px;
        border-radius: 6px;
        font-size: 10px;
        font-weight: 600;
    }

    /* ===== HOW IT WORKS ===== */
    .sh-how-section {
        background: #fff;
        padding: 80px 0;
        border-top: 1px solid #e8ecf1;
    }
    .sh-section-title {
        font-size: 32px;
        font-weight: 800;
        color: #1a2332;
    }
    .sh-step-circle {
        width: 64px;
        height: 64px;
        border-radius: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 16px;
        font-size: 28px;
        font-weight: 900;
    }

    /* ===== CTA ===== */
    .sh-cta-section {
        background: linear-gradient(135deg, #1a2332 0%, #0f1923 100%);
        padding: 64px 0;
    }
    .sh-cta-primary {
        padding: 14px 32px;
        border-radius: 12px;
        background: linear-gradient(135deg, #F97316, #FB923C);
        color: #fff;
        font-size: 16px;
        font-weight: 700;
        text-decoration: none;
        box-shadow: 0 6px 24px rgba(249,115,22,0.3);
        transition: all 0.2s;
    }
    .sh-cta-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 10px 32px rgba(249,115,22,0.45);
        color: #fff;
    }
    .sh-cta-secondary {
        padding: 14px 32px;
        border-radius: 12px;
        border: 1px solid #475569;
        color: #e2e8f0;
        font-size: 16px;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.2s;
    }
    .sh-cta-secondary:hover {
        background: rgba(255,255,255,0.05);
        color: #fff;
    }

    /* ===== RESPONSIVE ===== */
    @@media (max-width: 768px) {
        .sh-hero {
            padding: 50px 0 40px;
        }
        .sh-hero-title {
            font-size: 30px;
        }
        .sh-hero-desc {
            font-size: 15px;
        }
        .sh-search-box {
            flex-direction: column;
            border-radius: 12px;
        }
        .sh-search-input {
            padding: 14px 14px 14px 44px;
        }
        .sh-search-btn {
            padding: 14px;
        }
        .sh-group-title {
            font-size: 20px;
        }
        .sh-card-image {
            height: 150px;
        }
        .sh-section-title {
            font-size: 24px;
        }
        .sh-cta-primary, .sh-cta-secondary {
            width: 100%;
            text-align: center;
        }
    }
</style>
}
