@using ServiceMarketplace.Models
@using ServiceMarketplace.ViewModels
@model HomeViewModel

@{
    ViewData["Title"] = "Pazarix - Tadilat Pazaryeri";
    ViewData["FullWidth"] = true;
    Layout = "_Layout";
    var packageCounts = Model.PackageCounts;
    var searchQuery = Model.SearchQuery;
