@{
    ViewData["Title"] = "Teklif Oluştur";
    var listing = ViewBag.Listing as ServiceMarketplace.Models.Listing;
    var dimensions = ViewBag.Dimensions as Dictionary<string, decimal>;
    var metrics = ViewBag.Metrics as Dictionary<string, decimal>;
}

<div class="container my-5">
    <div class="row">
        <div class="col-lg-10 mx-auto">
            <!-- Header -->
            <div class="mb-4">
                <h1 class="display-5 mb-3">
                    <i class="bi bi-file-earmark-text me-2"></i>Satır Satır Teklif Oluştur
                </h1>
                <div class="alert alert-info">
                    <strong>@listing.Title</strong> için teklif oluşturuyorsunuz.
                    <br />Paket: <strong>@listing.ServicePackage.Code - @listing.ServicePackage.Name</strong>
                </div>
            </div>

            <form asp-action="CreateLineItemsOffer" method="post" id="offerForm">
                <input type="hidden" name="listingId" value="@listing.Id" />

                <div class="row">
                    <!-- Line Items Form — Grouped by MainCategory -->
                    <div class="col-lg-8">
                        @{
                            var catalogProducts = ViewBag.CatalogProducts as List<ServiceMarketplace.Models.SupplierProduct>;
                            var groupedItems = listing.ServicePackage.Items
                                .OrderBy(i => i.DisplayOrder)
                                .GroupBy(i => i.MainCategory);
                        }

                        @foreach (var mainGroup in groupedItems)
                        {
                            var groupId = mainGroup.Key.Replace(" ", "").Replace("/", "");
                            <div class="card shadow-sm mb-3">
                                <div class="card-header d-flex justify-content-between align-items-center"
                                     data-bs-toggle="collapse" data-bs-target="#group-@groupId"
                                     style="cursor: pointer; background: linear-gradient(135deg, #1a2332, #2d3a4a); color: #fff;">
                                    <h6 class="mb-0 fw-bold">@mainGroup.Key</h6>
                                    <span class="badge bg-warning text-dark">@mainGroup.Count() kalem</span>
                                </div>
                                <div id="group-@groupId" class="collapse show">
                                    <div class="card-body p-0">
                                        <div class="table-responsive">
                                            <table class="table table-sm table-hover mb-0">
                                                <thead class="table-light">
                                                    <tr class="small text-muted">
                                                        <th style="width: 100px;">Tür</th>
                                                        <th>Kalem</th>
                                                        <th style="width: 50px;">Birim</th>
                                                        <th style="width: 130px;">Marka</th>
                                                        <th style="width: 140px;">Ürün</th>
                                                        <th style="width: 80px;">Miktar</th>
                                                        <th style="width: 100px;">Birim Fiyat</th>
                                                        <th style="width: 90px;">Toplam</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var item in mainGroup.OrderBy(i => i.DisplayOrder))
                                                    {
                                                        var itemTypeColor = item.ItemType switch {
                                                            "İşçilik" => "#10b981",
                                                            "Ana Ürün" => "#3b82f6",
                                                            "Yardımcı Malzeme" => "#f59e0b",
                                                            "Alternatif Ürün" => "#8b5cf6",
                                                            "Material" => "#3b82f6",
                                                            "Labor" => "#10b981",
                                                            _ => "#64748b"
                                                        };
                                                        var itemCatalogProducts = catalogProducts?.Where(cp =>
                                                            cp.PackageItemId == item.Id ||
                                                            (cp.PackageItemId == null && cp.Category.Equals(item.MainCategory, StringComparison.OrdinalIgnoreCase))
                                                        ).ToList();

                                                        <tr class="line-item-row" data-item-id="@item.Id">
                                                            <td>
                                                                <input type="hidden" name="itemIds[]" value="@item.Id" />
                                                                <span class="badge" style="font-size: 10px; background: @(itemTypeColor)20; color: @itemTypeColor;">
                                                                    @item.ItemType
                                                                </span>
                                                            </td>
                                                            <td>
                                                                <strong class="small">@item.Name</strong>
                                                                @if (!string.IsNullOrEmpty(item.ConsumptionFormula))
                                                                {
                                                                    <br><small class="text-muted">@item.ConsumptionFormula</small>
                                                                }
                                                                @if (itemCatalogProducts != null && itemCatalogProducts.Any())
                                                                {
                                                                    <br>
                                                                    <select class="form-select form-select-sm catalog-select mt-1" data-row-index="@item.Id" style="font-size: 11px;">
                                                                        <option value="">Katalogdan seç...</option>
                                                                        @foreach (var product in itemCatalogProducts)
                                                                        {
                                                                            <option value="@product.Id"
                                                                                    data-brand="@product.Brand"
                                                                                    data-product="@product.ProductName"
                                                                                    data-price="@product.UnitPrice">
                                                                                @product.Brand - @product.ProductName (@product.UnitPrice.ToString("C"))
                                                                            </option>
                                                                        }
                                                                    </select>
                                                                }
                                                            </td>
                                                            <td class="small">@item.Unit</td>
                                                            <td><input type="text" name="brands[]" class="form-control form-control-sm brand-input" placeholder="Marka" /></td>
                                                            <td><input type="text" name="productNames[]" class="form-control form-control-sm product-input" placeholder="Ürün adı" /></td>
                                                            <td><input type="number" name="quantities[]" class="form-control form-control-sm quantity-input" step="0.01" value="0" min="0" /></td>
                                                            <td><input type="number" name="unitPrices[]" class="form-control form-control-sm price-input" step="0.01" value="0" min="0" /></td>
                                                            <td class="line-total fw-bold small">₺0.00</td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }

                        <!-- Additional Info -->
                        <div class="card shadow-sm mb-4">
                            <div class="card-body">
                                <div class="row g-3">
                                    <div class="col-md-6">
                                        <label class="form-label">Tahmini Süre (Gün)</label>
                                        <input type="number" class="form-control" name="estimatedDays" 
                                               min="1" value="7" required />
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label">Garanti Süresi (Ay)</label>
                                        <input type="number" class="form-control" name="warrantyMonths" 
                                               min="0" value="12" required />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Summary Sidebar -->
                    <div class="col-lg-4">
                        <!-- Customer Info -->
                        <div class="card shadow-sm mb-3">
                            <div class="card-header bg-light">
                                <h6 class="mb-0">
                                    <i class="bi bi-person me-2"></i>Müşteri Bilgileri
                                </h6>
                            </div>
                            <div class="card-body">
                                <p class="mb-1"><strong>İsim:</strong> @listing.User.FullName</p>
                                <p class="mb-1"><strong>Lokasyon:</strong> @listing.Location</p>
                            </div>
                        </div>

                        <!-- Dimensions -->
                        @if (dimensions != null && dimensions.Any())
                        {
                            <div class="card shadow-sm mb-3">
                                <div class="card-header bg-light">
                                    <h6 class="mb-0">
                                        <i class="bi bi-rulers me-2"></i>Ölçüler
                                    </h6>
                                </div>
                                <div class="card-body">
                                    @if (dimensions.ContainsKey("width"))
                                    {
                                        <p class="mb-1">Genişlik: <strong>@dimensions["width"] cm</strong></p>
                                    }
                                    @if (dimensions.ContainsKey("height"))
                                    {
                                        <p class="mb-1">Yükseklik: <strong>@dimensions["height"] cm</strong></p>
                                    }
                                    @if (dimensions.ContainsKey("depth") && dimensions["depth"] > 0)
                                    {
                                        <p class="mb-0">Derinlik: <strong>@dimensions["depth"] cm</strong></p>
                                    }
                                </div>
                            </div>
                        }

                        <!-- Calculated Metrics -->
                        @if (metrics != null && metrics.Any())
                        {
                            <div class="card shadow-sm mb-3">
                                <div class="card-header bg-light">
                                    <h6 class="mb-0">
                                        <i class="bi bi-calculator me-2"></i>Hesaplanan Değerler
                                    </h6>
                                </div>
                                <div class="card-body">
                                    @if (metrics.ContainsKey("areaM2"))
                                    {
                                        <p class="mb-1">Alan: <strong>@metrics["areaM2"].ToString("F2") m²</strong></p>
                                    }
                                    @if (metrics.ContainsKey("lengthM"))
                                    {
                                        <p class="mb-1">Uzunluk: <strong>@metrics["lengthM"].ToString("F2") m</strong></p>
                                    }
                                    @if (metrics.ContainsKey("wallAreaM2") && metrics["wallAreaM2"] > 0)
                                    {
                                        <p class="mb-0">Duvar Alanı: <strong>@metrics["wallAreaM2"].ToString("F2") m²</strong></p>
                                    }
                                </div>
                            </div>
                        }

                        <!-- Grand Total -->
                        <div class="card shadow border-success mb-3">
                            <div class="card-header bg-success text-white">
                                <h5 class="mb-0">
                                    <i class="bi bi-cash-stack me-2"></i>TOPLAM TUTAR
                                </h5>
                            </div>
                            <div class="card-body text-center">
                                <h2 class="text-success mb-0" id="grandTotal">0.00 ₺</h2>
                            </div>
                        </div>

                        <!-- Submit Button -->
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="bi bi-send me-2"></i>Teklifi Gönder
                            </button>
                            <a asp-controller="Listings" asp-action="OpenListings" 
                               class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle me-2"></i>İptal
                            </a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Line item calculation
        function updateLineTotal(row) {
            const quantityInput = row.querySelector('.quantity-input');
            const priceInput = row.querySelector('.price-input');
            const lineTotalEl = row.querySelector('.line-total');

            const quantity = parseFloat(quantityInput.value) || 0;
            const price = parseFloat(priceInput.value) || 0;
            const lineTotal = quantity * price;

            lineTotalEl.textContent = '₺' + lineTotal.toFixed(2);
            lineTotalEl.setAttribute('data-total', lineTotal);
            updateGrandTotal();
        }

        function updateGrandTotal() {
            let grandTotal = 0;
            document.querySelectorAll('.line-total').forEach(el => {
                grandTotal += parseFloat(el.getAttribute('data-total')) || 0;
            });

            document.getElementById('grandTotal').textContent = 
                grandTotal.toLocaleString('tr-TR', { minimumFractionDigits: 2, maximumFractionDigits: 2 }) + ' ₺';
        }

        // Attach event listeners
        document.querySelectorAll('.line-item-row').forEach(row => {
            const quantityInput = row.querySelector('.quantity-input');
            const priceInput = row.querySelector('.price-input');

            quantityInput.addEventListener('input', () => updateLineTotal(row));
            priceInput.addEventListener('input', () => updateLineTotal(row));
        });

        // Catalog auto-fill functionality
        document.querySelectorAll('.catalog-select').forEach(select => {
            select.addEventListener('change', function() {
                const selectedOption = this.options[this.selectedIndex];
                const row = this.closest('.line-item-row');
                
                if (selectedOption.value && row) {
                    // Get data from selected option
                    const brand = selectedOption.getAttribute('data-brand');
                    const product = selectedOption.getAttribute('data-product');
                    const price = selectedOption.getAttribute('data-price');
                    
                    // Fill the inputs
                    const brandInput = row.querySelector('.brand-input');
                    const productInput = row.querySelector('.product-input');
                    const priceInput = row.querySelector('.price-input');
                    
                    if (brandInput) brandInput.value = brand || '';
                    if (productInput) productInput.value = product || '';
                    if (priceInput) {
                        priceInput.value = price || '';
                        // Trigger calculation
                        updateLineTotal(row);
                    }
                } else if (row) {
                    // Manual entry - clear fields (optional)
                    // Uncomment if you want to clear on "Manuel Giriş" selection
                    // const brandInput = row.querySelector('.brand-input');
                    // const productInput = row.querySelector('.product-input');
                    // const priceInput = row.querySelector('.price-input');
                    // if (brandInput) brandInput.value = '';
                    // if (productInput) productInput.value = '';
                    // if (priceInput) priceInput.value = '';
                }
            });
        });

        // Initial calculation
        updateGrandTotal();
    </script>
}
