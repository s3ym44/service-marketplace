@model ServiceMarketplace.Models.ServicePackage

@{
    ViewData["Title"] = Model.Name;
}

<div class="container my-5">
    <!-- Package Header -->
    <div class="row mb-4">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Ana Sayfa</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index">Paketler</a></li>
                    <li class="breadcrumb-item active">@Model.Code</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row mb-5">
        <div class="col-lg-8">
            <div class="d-flex align-items-center mb-3">
                <h1 class="display-5 mb-0 me-3">@Model.Name</h1>
                <span class="badge bg-primary fs-6">@Model.Code</span>
            </div>
            <p class="text-muted mb-3">
                <i class="bi bi-tag me-2"></i>@Model.MainCategory.Name
            </p>
            <p class="lead">@Model.Description</p>
        </div>
    </div>

    <!-- Package Items -->
    <div class="row mb-5">
        <div class="col-12">
            <h3 class="mb-4">
                <i class="bi bi-list-check me-2"></i>Paket İçeriği
            </h3>
            
            <div class="card shadow-sm">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Sıra</th>
                                    <th>Kategori</th>
                                    <th>Kalem Adı</th>
                                    <th>Tür</th>
                                    <th>Birim</th>
                                    <th>Zorunluluk</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Items.OrderBy(i => i.DisplayOrder))
                                {
                                    <tr>
                                        <td>@item.DisplayOrder</td>
                                        <td>
                                            <span class="badge bg-secondary">@item.Category</span>
                                        </td>
                                        <td>
                                            <strong>@item.Name</strong>
                                        </td>
                                        <td>
                                            @if (item.ItemType == "Material")
                                            {
                                                <span class="badge bg-info">
                                                    <i class="bi bi-box me-1"></i>Malzeme
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-warning">
                                                    <i class="bi bi-tools me-1"></i>İşçilik
                                                </span>
                                            }
                                        </td>
                                        <td>
                                            <code>@item.Unit</code>
                                        </td>
                                        <td>
                                            @if (item.IsRequired)
                                            {
                                                <span class="text-danger">
                                                    <i class="bi bi-check-circle-fill me-1"></i>Zorunlu
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">
                                                    <i class="bi bi-circle me-1"></i>Opsiyonel
                                                </span>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Calculator Section -->
    <div class="row mb-5">
        <div class="col-lg-8">
            <div class="card shadow-sm border-primary">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-calculator me-2"></i>Ölçü Hesaplayıcı
                    </h4>
                </div>
                <div class="card-body">
                    <p class="text-muted mb-4">
                        Alanınızın ölçülerini girin, sistem otomatik olarak gerekli miktarları hesaplasın.
                    </p>
                    
                    <form id="calculatorForm">
                        <div class="row g-3 mb-4">
                            <div class="col-md-4">
                                <label class="form-label">Genişlik (cm)</label>
                                <input type="number" class="form-control" id="width" placeholder="320" min="0" step="1">
                            </div>
                            <div class="col-md-4">
                                <label class="form-label">Yükseklik (cm)</label>
                                <input type="number" class="form-control" id="height" placeholder="420" min="0" step="1">
                            </div>
                            <div class="col-md-4">
                                <label class="form-label">Derinlik (cm)</label>
                                <input type="number" class="form-control" id="depth" placeholder="260" min="0" step="1">
                            </div>
                        </div>
                        
                        <div class="d-grid">
                            <button type="button" class="btn btn-primary" id="calculateBtn">
                                <i class="bi bi-calculator me-2"></i>Hesapla
                            </button>
                        </div>
                    </form>
                    
                    <div id="calculationResults" class="mt-4 d-none">
                        <hr>
                        <h5 class="mb-3">Hesaplanan Değerler:</h5>
                        <div class="alert alert-info">
                            <div id="resultsContent"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Action Buttons -->
    <div class="row">
        <div class="col-12">
            <a asp-controller="Listings" asp-action="CreateWithPackage" asp-route-packageId="@Model.Id" 
               class="btn btn-success btn-lg">
                <i class="bi bi-plus-circle me-2"></i>Bu Paket ile İlan Oluştur
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary btn-lg ms-2">
                <i class="bi bi-arrow-left me-2"></i>Paketlere Dön
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('calculateBtn').addEventListener('click', function() {
            const width = parseFloat(document.getElementById('width').value) || 0;
            const height = parseFloat(document.getElementById('height').value) || 0;
            const depth = parseFloat(document.getElementById('depth').value) || 0;
            
            if (width === 0 || height === 0) {
                alert('Lütfen en az genişlik ve yükseklik değerlerini girin.');
                return;
            }
            
            // Basic calculations (can be customized per package)
            const areaM2 = (width * height) / 10000; // cm² to m²
            const lengthM = width / 100; // cm to m
            const wallAreaM2 = ((width * height * 2) + (depth * height * 2)) / 10000;
            
            const resultsHtml = `
                <div class="row">
                    <div class="col-md-4">
                        <strong>Taban Alanı:</strong><br>
                        <span class="fs-5 text-primary">${areaM2.toFixed(2)} m²</span>
                    </div>
                    <div class="col-md-4">
                        <strong>Uzunluk:</strong><br>
                        <span class="fs-5 text-primary">${lengthM.toFixed(2)} m</span>
                    </div>
                    <div class="col-md-4">
                        <strong>Duvar Alanı:</strong><br>
                        <span class="fs-5 text-primary">${wallAreaM2.toFixed(2)} m²</span>
                    </div>
                </div>
            `;
            
            document.getElementById('resultsContent').innerHTML = resultsHtml;
            document.getElementById('calculationResults').classList.remove('d-none');
        });
    </script>
}
