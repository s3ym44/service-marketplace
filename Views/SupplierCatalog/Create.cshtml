@model ServiceMarketplace.Models.SupplierProduct

@{
    ViewData["Title"] = "Yeni Ürün Ekle";
    var packageItems = ViewBag.PackageItems as List<ServiceMarketplace.Models.PackageItem>;
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- Header -->
            <div class="mb-4">
                <h2><i class="bi bi-plus-circle me-2"></i>Yeni Ürün Ekle</h2>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-action="Index">Katalog</a></li>
                        <li class="breadcrumb-item active">Yeni Ürün</li>
                    </ol>
                </nav>
            </div>

            <!-- Form -->
            <form asp-action="Create" method="post" class="card">
                <div class="card-body">
                    @Html.AntiForgeryToken()
                    
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <!-- Category -->
                    <div class="mb-3">
                        <label asp-for="Category" class="form-label">
                            Kategori <span class="text-danger">*</span>
                        </label>
                        <input asp-for="Category" class="form-control" placeholder="ör: Dolap İşleri, Tezgah, Seramik" />
                        <span asp-validation-for="Category" class="text-danger"></span>
                        <div class="form-text">Ürünün genel kategorisini girin.</div>
                    </div>

                    <!-- Package Item (Optional) -->
                    <div class="mb-3">
                        <label asp-for="PackageItemId" class="form-label">
                            Paket Kalemi (Opsiyonel)
                        </label>
                        <select asp-for="PackageItemId" class="form-select">
                            <option value="">-- Seçiniz (Genel Ürün) --</option>
                            @if (packageItems != null)
                            {
                                @foreach (var item in packageItems)
                                {
                                    <option value="@item.Id">
                                        @item.ServicePackage.Name - @item.Name (@item.Unit)
                                    </option>
                                }
                            }
                        </select>
                        <div class="form-text">Eğer bu ürün belirli bir paket kalemine uygunsa seçin.</div>
                    </div>

                    <hr class="my-4" />

                    <!-- Brand -->
                    <div class="mb-3">
                        <label asp-for="Brand" class="form-label">
                            Marka <span class="text-danger">*</span>
                        </label>
                        <input asp-for="Brand" class="form-control" placeholder="ör: Kelebek, Yataş, Ege Seramik" />
                        <span asp-validation-for="Brand" class="text-danger"></span>
                    </div>

                    <!-- Product Name -->
                    <div class="mb-3">
                        <label asp-for="ProductName" class="form-label">
                            Ürün Adı <span class="text-danger">*</span>
                        </label>
                        <input asp-for="ProductName" class="form-control" placeholder="ör: Klasik Beyaz Mutfak Dolabı" />
                        <span asp-validation-for="ProductName" class="text-danger"></span>
                    </div>

                    <!-- Model Code -->
                    <div class="mb-3">
                        <label asp-for="ModelCode" class="form-label">
                            Model Kodu (Opsiyonel)
                        </label>
                        <input asp-for="ModelCode" class="form-control" placeholder="ör: KB-2024" />
                        <span asp-validation-for="ModelCode" class="text-danger"></span>
                    </div>

                    <!-- Description -->
                    <div class="mb-3">
                        <label asp-for="Description" class="form-label">
                            Açıklama (Opsiyonel)
                        </label>
                        <textarea asp-for="Description" class="form-control" rows="3" 
                                  placeholder="Ürün hakkında ek bilgiler..."></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <hr class="my-4" />

                    <div class="row">
                        <!-- Unit Price -->
                        <div class="col-md-6 mb-3">
                            <label asp-for="UnitPrice" class="form-label">
                                Birim Fiyat <span class="text-danger">*</span>
                            </label>
                            <div class="input-group">
                                <span class="input-group-text">₺</span>
                                <input asp-for="UnitPrice" type="number" step="0.01" class="form-control" 
                                       placeholder="850.00" />
                            </div>
                            <span asp-validation-for="UnitPrice" class="text-danger"></span>
                        </div>

                        <!-- Unit -->
                        <div class="col-md-6 mb-3">
                            <label asp-for="Unit" class="form-label">
                                Birim <span class="text-danger">*</span>
                            </label>
                            <select asp-for="Unit" class="form-select">
                                <option value="">-- Seçiniz --</option>
                                <option value="m²">m² (Metrekare)</option>
                                <option value="m">m (Metre)</option>
                                <option value="adet">adet</option>
                                <option value="set">set</option>
                                <option value="gün">gün</option>
                                <option value="kg">kg</option>
                                <option value="litre">litre</option>
                            </select>
                            <span asp-validation-for="Unit" class="text-danger"></span>
                        </div>
                    </div>

                    <hr class="my-4" />

                    <div class="row">
                        <!-- In Stock -->
                        <div class="col-md-6 mb-3">
                            <div class="form-check form-switch">
                                <input asp-for="InStock" class="form-check-input" type="checkbox" checked />
                                <label asp-for="InStock" class="form-check-label">
                                    Stokta Mevcut
                                </label>
                            </div>
                            <div class="form-text">Ürün şu anda stoklarınızda mevcut mu?</div>
                        </div>

                        <!-- Stock Quantity -->
                        <div class="col-md-6 mb-3">
                            <label asp-for="StockQuantity" class="form-label">
                                Stok Miktarı (Opsiyonel)
                            </label>
                            <input asp-for="StockQuantity" type="number" class="form-control" 
                                   placeholder="100" />
                            <span asp-validation-for="StockQuantity" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <!-- Footer -->
                <div class="card-footer bg-light d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left me-2"></i>İptal
                    </a>
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-check-circle me-2"></i>Kaydet
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
