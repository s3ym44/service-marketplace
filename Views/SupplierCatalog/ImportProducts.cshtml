@{
    ViewData["Title"] = "Toplu Ürün Yükle";
}

<div class="container py-4" style="max-width: 800px;">
    <h2 class="fw-bold mb-4"><i class="bi bi-box-seam me-2"></i>Toplu Ürün Yükle (Excel)</h2>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <!-- Şablon İndir -->
    <div class="card mb-4 border-0 shadow-sm" style="background: linear-gradient(135deg, #f0fdf4, #f0f9ff);">
        <div class="card-body d-flex align-items-center justify-content-between flex-wrap gap-3">
            <div>
                <h5 class="fw-bold mb-1"><i class="bi bi-download me-1"></i> Excel Şablonu</h5>
                <p class="text-muted mb-0">Ürünlerinizi bu formatta hazırlayın. Mevcut ürünler marka + isim eşleşmesiyle otomatik güncellenir.</p>
            </div>
            <a asp-action="DownloadProductTemplate" class="btn btn-primary">
                <i class="bi bi-download me-1"></i> Şablonu İndir
            </a>
        </div>
    </div>

    <!-- Upload -->
    <div class="card border-0 shadow-sm">
        <div class="card-body p-4">
            <form asp-action="ImportProducts" method="post" enctype="multipart/form-data">
                @Html.AntiForgeryToken()
                <div class="mb-4">
                    <label class="form-label fw-bold">Excel Dosyası (.xlsx)</label>
                    <input type="file" name="file" class="form-control" accept=".xlsx" required>
                    <small class="text-muted">Sütunlar: Kategori | Marka | Ürün Adı | Model Kodu | Açıklama | Birim Fiyat | Birim | Stokta | Stok Adedi</small>
                </div>
                <button type="submit" class="btn btn-success btn-lg w-100">
                    <i class="bi bi-upload me-1"></i> Ürünleri İçe Aktar
                </button>
            </form>
        </div>
    </div>

    <!-- Mevcut Ürünleri Dışa Aktar -->
    <div class="text-center mt-3">
        <a asp-action="ExportProducts" class="text-muted">
            <i class="bi bi-file-earmark-arrow-down me-1"></i> Mevcut ürünlerimi Excel olarak indir
        </a>
    </div>
</div>
