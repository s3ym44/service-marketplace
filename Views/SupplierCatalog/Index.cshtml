@model IEnumerable<ServiceMarketplace.Models.SupplierProduct>

@{
    ViewData["Title"] = "Ürün Kataloğum";
}

<div class="container my-5">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap gap-3">
        <div>
            <h2 class="mb-1"><i class="bi bi-box-seam me-2"></i>Ürün Kataloğum</h2>
            <p class="text-muted mb-0">Sık kullandığınız ürünleri kaydedin, teklif oluştururken hızlıca seçin.</p>
        </div>
        <div class="d-flex gap-2">
            <a asp-action="ImportProducts" class="btn btn-outline-primary">
                <i class="bi bi-file-earmark-arrow-up me-1"></i> Excel ile Toplu Yükle
            </a>
            <a asp-action="Create" class="btn btn-success">
                <i class="bi bi-plus-circle me-1"></i> Tekli Ürün Ekle
            </a>
        </div>
    </div>

    <!-- Category Filter -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="btn-group" role="group">
                <a asp-action="Index" 
                   class="btn @(string.IsNullOrEmpty(ViewBag.SelectedCategory) ? "btn-primary" : "btn-outline-primary")">
                    <i class="bi bi-grid-3x3-gap me-1"></i>Tümü
                </a>
                @foreach (var cat in ViewBag.Categories as List<string>)
                {
                    <a asp-action="Index" asp-route-category="@cat" 
                       class="btn @(ViewBag.SelectedCategory == cat ? "btn-primary" : "btn-outline-primary")">
                        @cat
                    </a>
                }
            </div>
        </div>
    </div>

    @if (Model.Any())
    {
        <!-- Products Table -->
        <div class="card">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Kategori</th>
                                <th>Marka</th>
                                <th>Ürün Adı</th>
                                <th>Model Kodu</th>
                                <th class="text-end">Birim Fiyat</th>
                                <th>Birim</th>
                                <th>Stok</th>
                                <th class="text-end">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var product in Model)
                            {
                                <tr>
                                    <td>
                                        <span class="badge bg-secondary">@product.Category</span>
                                        @if (product.PackageItem != null)
                                        {
                                            <br/>
                                            <small class="text-muted">
                                                <i class="bi bi-box me-1"></i>@product.PackageItem.Name
                                            </small>
                                        }
                                    </td>
                                    <td><strong>@product.Brand</strong></td>
                                    <td>
                                        @product.ProductName
                                        @if (!string.IsNullOrEmpty(product.Description))
                                        {
                                            <br/>
                                            <small class="text-muted">@product.Description</small>
                                        }
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(product.ModelCode))
                                        {
                                            <code>@product.ModelCode</code>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td class="text-end">
                                        <strong class="text-success">@product.UnitPrice.ToString("C")</strong>
                                    </td>
                                    <td>
                                        <span class="badge bg-info">@product.Unit</span>
                                    </td>
                                    <td>
                                        @if (product.InStock)
                                        {
                                            <span class="badge bg-success">
                                                <i class="bi bi-check-circle me-1"></i>Stokta
                                            </span>
                                            @if (product.StockQuantity.HasValue)
                                            {
                                                <br/>
                                                <small class="text-muted">@product.StockQuantity @product.Unit</small>
                                            }
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">
                                                <i class="bi bi-x-circle me-1"></i>Stok Yok
                                            </span>
                                        }
                                    </td>
                                    <td class="text-end">
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a asp-action="Edit" asp-route-id="@product.Id" 
                                               class="btn btn-outline-primary"
                                               title="Düzenle">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <button type="button" 
                                                    class="btn btn-outline-danger"
                                                    onclick="deleteProduct(@product.Id, '@product.ProductName')"
                                                    title="Sil">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="mt-3 text-muted">
            <i class="bi bi-info-circle me-1"></i>
            Toplam @Model.Count() ürün listeleniyor.
        </div>
    }
    else
    {
        <!-- Empty State -->
        <div class="text-center py-5">
            <i class="bi bi-inbox" style="font-size: 4rem; color: #ccc;"></i>
            <h4 class="mt-3 text-muted">Henüz ürün eklemediniz</h4>
            <p class="text-muted">
                Ürün kataloğunuza ürün ekleyerek teklif oluştururken zamandan tasarruf edebilirsiniz.
            </p>
            <a asp-action="Create" class="btn btn-primary mt-2">
                <i class="bi bi-plus-circle me-2"></i>İlk Ürünü Ekle
            </a>
        </div>
    }
</div>

<!-- Delete Confirmation Form -->
<form id="deleteForm" method="post" style="display:none;">
    @Html.AntiForgeryToken()
</form>

@section Scripts {
    <script>
        function deleteProduct(id, name) {
            if (confirm(`"${name}" ürününü silmek istediğinizden emin misiniz?`)) {
                const form = document.getElementById('deleteForm');
                form.action = `/SupplierCatalog/Delete/${id}`;
                form.submit();
            }
        }
    </script>
}
