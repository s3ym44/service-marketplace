@model ServiceMarketplace.Models.ServiceTemplate

@{
    ViewData["Title"] = "Yeni Şablon";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-white">
                    <h4>Yeni Şablon Oluştur</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">Şablon Adı</label>
                            <input asp-for="Name" class="form-control" placeholder="Örn: Standart Mutfak Yenileme" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Açıklama</label>
                            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                        </div>
                        <div class="mb-3 form-check">
                            <input asp-for="IsActive" class="form-check-input" type="checkbox" checked />
                            <label asp-for="IsActive" class="form-check-label">Aktif</label>
                        </div>
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">Oluştur ve Kalem Ekle</button>
                            <a asp-action="Index" class="btn btn-link text-muted">İptal</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
