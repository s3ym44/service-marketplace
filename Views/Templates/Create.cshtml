@model ServiceMarketplace.Models.ServiceTemplate

@{
    ViewData["Title"] = "Yeni Şablon";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Yeni Şablon Oluştur</h1>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Geri
        </a>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">Şablon Adı</label>
                            <input asp-for="Name" class="form-control" placeholder="Örn: Standart Mutfak Tadilatı" required />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="RenovationType" class="form-label">Ana Kategori</label>
                            <select asp-for="RenovationType" class="form-select">
                                <option value="">-- Seçiniz --</option>
                                <option value="Mutfak">Mutfak Tadilatı</option>
                                <option value="Banyo">Banyo Tadilatı</option>
                                <option value="Salon">Salon Tadilatı</option>
                                <option value="Yatak Odası">Yatak Odası Tadilatı</option>
                                <option value="Ofis">Ofis Tadilatı</option>
                                <option value="Bina Dışı">Bina Dışı Tadilatı</option>
                                <option value="Genel">Genel Tadilat</option>
                            </select>
                            <span asp-validation-for="RenovationType" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Açıklama</label>
                            <textarea asp-for="Description" class="form-control" rows="4" 
                                      placeholder="Şablonun kapsamını ve içeriğini kısaca açıklayın..."></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="mb-3 form-check">
                            <input asp-for="IsActive" class="form-check-input" type="checkbox" checked />
                            <label asp-for="IsActive" class="form-check-label">
                                Aktif
                            </label>
                        </div>

                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-lg"></i> Oluştur ve Ürün Ekle
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary">İptal</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card bg-light">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="bi bi-info-circle"></i> Bilgi
                    </h5>
                    <p class="card-text small">
                        Şablon oluşturduktan sonra, içerisine ürün ve işçilik kalemleri ekleyebilirsiniz. 
                        Her ürün için alt kategori (Alçıpan, Elektrik, Sıhhi Tesisat, vb.) belirleyebilirsiniz.
                    </p>
                    <hr />
                    <h6 class="small fw-bold">Ana Kategoriler:</h6>
                    <ul class="small mb-0">
                        <li>Mutfak Tadilatı</li>
                        <li>Banyo Tadilatı</li>
                        <li>Salon Tadilatı</li>
                        <li>Yatak Odası Tadilatı</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
